                    </div>
                 
                    
                        <div class="mb-3">
                          <label for="fees" class="from-label">Fees</label>
                          <input type="text" class="form-control" id="fees" placeholder="fees" name="fees" value="<%=data.fees%>"/>
                        </div>
                   
                        <button type="submit" class="btn btn-warning">Update</button>
                        <button type="submit" class="btn btn-secondary">Back to Home</button>
                      </div>
                    </form>
                  </div>
                  </div>
                
                  

